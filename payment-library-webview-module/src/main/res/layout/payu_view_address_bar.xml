<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/address_bar_image_view"
        android:layout_width="@dimen/payu_styles_small_icons_size"
        android:layout_height="@dimen/payu_styles_small_icons_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/payu_styles_padding_medium" />

    <TextView
        android:id="@+id/address_view_url_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/address_bar_image_view"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="www.wp.pl" />
</merge>
