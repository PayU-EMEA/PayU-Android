<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/visaCard_imageView"
        android:layout_width="@dimen/payu_styles_major_icons_size"
        android:layout_height="@dimen/payu_styles_major_icons_size"
        android:layout_margin="@dimen/payu_styles_padding_medium"
        android:contentDescription="@string/visa"
        tools:src="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/masterCard_imageView"
        android:layout_width="@dimen/payu_styles_major_icons_size"
        android:layout_height="@dimen/payu_styles_major_icons_size"
        android:layout_margin="@dimen/payu_styles_padding_medium"
        android:contentDescription="@string/mastercard"
        android:layout_toEndOf="@id/visaCard_imageView"
        tools:src="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/maestroCard_imageView"
        android:layout_width="@dimen/payu_styles_major_icons_size"
        android:layout_height="@dimen/payu_styles_major_icons_size"
        android:layout_margin="@dimen/payu_styles_padding_medium"
        android:contentDescription="@string/maestro"
        android:layout_toEndOf="@id/masterCard_imageView"
        tools:src="@android:drawable/ic_delete" />

</merge>