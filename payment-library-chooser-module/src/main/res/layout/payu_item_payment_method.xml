<?xml version="1.0" encoding="utf-8"?>
<com.payu.android.front.sdk.payment_library_payment_chooser.payment_method.internal.ui.widget.view.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_reveal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:swipeMode="same_level">

    <FrameLayout
        android:id="@+id/payment_method_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/payu_styles_padding_large">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/payu_styles_major_icons_size"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_delete" />
    </FrameLayout>

    <com.payu.android.front.sdk.payment_library_payment_chooser.payment_method.internal.ui.payment_method.view.PaymentMethodView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_paymentMethodView"
        style="@style/Style.PayU.Internal.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payu_styles_payment_method_height">

    </com.payu.android.front.sdk.payment_library_payment_chooser.payment_method.internal.ui.payment_method.view.PaymentMethodView>
</com.payu.android.front.sdk.payment_library_payment_chooser.payment_method.internal.ui.widget.view.SwipeRevealLayout>
